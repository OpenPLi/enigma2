		<widget source="selected" render="Label" position="top" size="*,32" font="FdLcD;16" />
		<panel position="bottom" size="*,18">
			<widget source="global.CurrentTime" render="Label" position="right" size="60,*" halign="right" font="FdLcD;16" >
